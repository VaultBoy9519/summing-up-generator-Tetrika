{
  "manifest_version": 3,
  "name": "Tetrika SuG Extension Test",
  "description": "Расширение позволяет генератору резюмирования делать запросы в админку и получать ответ",
  "version": "1.0",
  "icons": {
    "128": "logo.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "cookies",
    "offscreen"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "lib/moment.js",
        "content.js"
      ]
    }
  ]
}
